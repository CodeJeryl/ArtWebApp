
@model ArtProject2016.Models.Payout


  <div class="modal fade" id="pay-modal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
                <div class="modal-dialog modal-sm">

                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="pay">Payout Request Module</h4>
                        </div>
                        <div class="modal-body">
                          @using(Html.BeginForm("RequestPayout","Account",FormMethod.Post))
                          {
                              <div class="form-group">
                                  <label for="PayOutMethod">Payout Method</label>
                                  @Html.EditorFor(m => m.PayOutMethod, new { @class = "form-control" })
                                  @Html.ValidationMessageFor(model => model.PayOutMethod)
                              </div>
                              
                              <div class="form-group">
                                  <label for="RedeemedPayoutAmt">Amount</label>
                                  @Html.EditorFor(m => m.RedeemedPayoutAmt, new { @class = "form-control", @readonly = "true"})
                                  @Html.ValidationMessageFor(model => model.RedeemedPayoutAmt)
                              </div>
                              <div class="form-group">
                                  <label for="RedeemedPayoutAmt">First Name</label>
                                  @Html.EditorFor(m => m.FirstName, new { @class = "form-control", @readonly = "true" })
                                  @Html.ValidationMessageFor(model => model.FirstName)
                              </div>
                              <div class="form-group">
                                  <label for="RedeemedPayoutAmt">Last Name</label>
                                  @Html.EditorFor(m => m.LastName, new { @class = "form-control", @readonly = "true"})
                                  @Html.ValidationMessageFor(model => model.LastName)
                              </div>
                              
                                <p class="text-center">
                                    <button class="btn btn-primary"><i class="fa fa-sign-in"></i>Submit Payout Request</button>
                                </p>
                          }
                        </div>
                    </div>
                </div>
            </div>