@model IEnumerable<ArtProject2016.Models.UserProfile>

@{
    ViewBag.Title = "ProfileVerification";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Current = "ProfileVerification";
}


<h1>Profile Verification</h1>

        <p class="lead">Check ID uploaded</p>
        <p class="text-muted">Make sure that Name on ID and profile are identical.</p>

        <hr>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Nickname</th>
                        <th>Id Verified</th>
                        <th>Uploaded ID</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.UserAccount.firstName)</td>
                            <td>
                                @String.Format("{0:d}", item.UserAccount.lastName)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserAccount.nickName)</td>
                            <td>
                               @Html.DisplayFor(modelItem => item.isIdVerified)</td>
                            <td>
                               <img src="@(item.Path == null ? null : Url.Content(item.Path))"/> 
                            </td>
                            <td>
                                @Html.ActionLink("Verify ID/Edit Accnt", "VerifyID", new { id = item.UserAccountId }, new { @class = "btn btn-info btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>



