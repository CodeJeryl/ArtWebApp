@model ArtProject2016.Models.ForSaleAlbum


@{
    ViewBag.Title = "Delete Image Page";
    ViewBag.Current = "Collections";
  
}

<div class="col-md-9" id="wishlist">
    
        @if (ViewBag.Error != null)
        {
            <div class="box">
                <div class="alert alert-danger" role="alert">@ViewBag.Error </div>
                </div>
        }

    <div>
        <div class="row products">
            <div class="col-md-12 col-sm-12 box">
                
                <span class="lead">Are you sure you want to delete this Image of <strong> @Model.ForSale.Title</strong>?</span>


                <div class="col-md-5" id="text-page">
                    <span style="float: left; padding: 10px">
                        <img src="@Url.Content(Model.Path)"  width="140px" class="img-responsive"/></span>
                </div>
                <div class="col-md-7 buttonsR" style="padding-top: 10%">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Yes, please delete" class="btn-lg btn-danger" />
                            |
                            @Html.ActionLink("Back to Edit", "Edit",new { id = Model.ForSaleId }, new { @class ="btn-lg btn-success"})
                        </div>
                    }

                </div>

            </div>
        </div>



    </div>



</div>


